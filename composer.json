{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "akrista/filamenter",
    "type": "project",
    "description": "A laravel starter kit built with filament 4",
    "keywords": ["laravel", "framework","filamentphp"],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "filament/filament": "^4.0",
        "filament/spatie-laravel-settings-plugin": "^4.0",
        "flowframe/laravel-trend": "^0.4.0",
        "inertiajs/inertia-laravel": "^2.0.2",
        "laravel/framework": "^12.16.0",
        "laravel/horizon": "^5.32",
        "laravel/octane": "^2.9",
        "laravel/reverb": "^1.0",
        "laravel/tinker": "^2.10.1",
        "spatie/laravel-settings": "^3.4",
        "spatie/laravel-translation-loader": "^2.8",
        "tightenco/ziggy": "^2.5.3"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "barryvdh/laravel-ide-helper": "^3.5",
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.24.1",
        "laravel/boost": "^1.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.22.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpunit/phpunit": "^11.5.3",
        "rector/rector": "^2.0",
        "soloterm/solo": "^0.5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": ["@php artisan vendor:publish --tag=laravel-assets --ansi --force"],
        "post-root-package-install": ["@php -r \"file_exists('.env') || copy('.env.example', '.env');\""],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#10b981,#fb7185,#fdba74\" \"php artisan serve --host=0.0.0.0\" \"php artisan queue:listen --queue=default --tries=1\" \"php artisan reverb:start\" \"php artisan pail --timeout=0\" \"bun run dev\" --names=server,queue,broadcast,logs,vite"
        ],
        "prod": [
            "Composer\\Config::disableProcessTimeout",
            "bun run build",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#10b981,#fb7185,#fdba74\" \"php artisan octane:start --host=0.0.0.0\" \"php artisan horizon\" \"php artisan reverb:start\" \"php artisan pail --timeout=0\" --names=server,queue,broadcast,logs,vite"
        ],
        "test": ["@php artisan config:clear --ansi", "@php artisan test"],
        "migrate": ["@php artisan migrate --ansi --graceful"],
        "migrate:fresh": ["@php artisan migrate:fresh --seed --force --ansi"],
        "build": [
            "Composer\\Config::disableProcessTimeout",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models -NR",
            "@php artisan ide-helper:meta",
            "@php artisan storage:link",
            "@php artisan filament:upgrade",
            "bun run build",
            "vendor/bin/rector",
            "vendor/bin/pint --ansi",
            "@php artisan optimize:clear"
        ],
        "ide-helper": [
            "Composer\\Config::disableProcessTimeout",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models -NR",
            "@php artisan ide-helper:meta"
        ],
        "rector": ["vendor/bin/rector"],
        "pint": ["vendor/bin/pint"]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
